<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>

    <record id="servicios_menu_action" model="ir.actions.act_window">
      <field name="name">Sitecnet Servicios</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sitecnet.servicios</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Servicios
        </p>
        <p>
          Presiona Crear para agregar una nuevo servicio
        </p>
      </field>
    </record>
      <record id="view_sitecnet_servicios_form" model="ir.ui.view">
      <field name="name">view.sitecnet.servicios.form</field>
      <field name="model">sitecnet.servicios</field>
      <field name="arch" type="xml">
        <form string="Servicios Form">
        <header>
            <button type="object" name="create_rutinas" string="Crear Rutinas"/>
        </header>
        <group string="Datos Generales">
            <group>
                <field name="name"/>
                <field name="empresa"
                options="{'no_create_edit': True},
                           {'no_quick_create'}"/>
                <field name="usuario" 
                string="responsable"
                domain="[('parent_id','=', empresa)]"
                options="{'no_create_edit': True},
                           {'no_quick_create'}"/>
            </group>
            <group string="Programacion">
                <field name="cantidad"/>
                <field name="intervalo"/>
                <field name="fcomienzo"/>
                <field name="ffinal"/>
            </group>
            <group string="revisiÃ³n">
                <field name="frevision"/>
                <field name="revisado"/>
            </group>
        </group>
        <group string="Detalles">
            <field name="detalles"/>
        </group>
        <notebook>
             <page string="Rutinas">
                <field name="rutinas"/>
            </page>
             <page string="Equipos">
                  <field name="equipos" domain="[('empresa','=', empresa)]"/>
                </page>
        </notebook>  

        </form>
      </field>
    </record>

    <record id="view_sitecnet_servicios_tree" model="ir.ui.view">
      <field name="name">view.sitecnet.servicios.tree</field>
      <field name="model">sitecnet.servicios</field>
      <field name="arch" type="xml">
        <tree string="Servicios Tree">
          <field name="name"/>
            <field name="name"/>
            <field name="empresa"/>
            <field name="ffinal"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>