<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>

    <record id="actividades_menu_action" model="ir.actions.act_window">
      <field name="name">Sitecnet Actividades</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sitecnet.actividades</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Actividades
        </p>
        <p>
          Presiona Crear para agregar una nueva Acvtividad
        </p>
      </field>
    </record>
      <record id="view_sitecnet_actividades_form" model="ir.ui.view">
      <field name="name">view.sitecnet.actividades.form</field>
      <field name="model">sitecnet.actividades</field>
      <field name="arch" type="xml">
        <form string="Actividades Form">
        <group>
          <field name="name"/>
            <field name="fecha"/>
            <field name="solucion"/>
            <field name="reporte" invisible="True"/>
            <field name="fecha_programada" invisible="True"/>            
          </group>
          <field name="diagnostico" attrs="{'invisible' :[('solucion', '=', True )]}"/>
        <field name="resumen"/>
        </form>
      </field>
    </record>

    <record id="view_sitecnet_actividadess_tree" model="ir.ui.view">
      <field name="name">view.sitecnet.actividades.tree</field>
      <field name="model">sitecnet.actividades</field>
      <field name="arch" type="xml">
        <tree string="Actividades Tree">
          <field name="name"/>
            <field name="fecha"/>
            <field name="resumen"/>
            <field name="solucion"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>