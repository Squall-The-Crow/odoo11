<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>

    <record id="software_menu_action" model="ir.actions.act_window">
      <field name="name">Sitecnet Software</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sitecnet.software</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          software
        </p>
        <p>
          Presiona Crear para agregar nuevo Software
        </p>
      </field>
    </record>

      <record id="view_sitecnet_software_form" model="ir.ui.view">
      <field name="name">view.sitecnet.software.form</field>
      <field name="model">sitecnet.software</field>
      <field name="arch" type="xml">
        <form string="Software Form">
          <sheet>
              <group  string="Datos de software">
              <group>
                <field name="name"/>
                <field name="licencia"/>
                <field name="user"/>
                <field name="passw"/>
              </group>
              <group>
                <field name="fecha_compra"/>
                <field name="vigencia"/>
                <field name="empresa"/>
                <field name="categoria"/>
              </group>
              </group>
              <notebook>
                <page string="Equipos">
                  <field name="equipos" domain="[('empresa','=', empresa)]"/>
                </page>
                <page string="Usuarios">
                  <field name="usuarios" domain="[('parent_id','=', empresa)]"/>
                </page>
                <page string="Documentos">
                  <field name="documentos" domain="[('empresa','=', empresa)]"/>
                </page>
                <page string="Notas">
                  <field name="notas"/>
                </page>
              </notebook>            
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_sitecnet_software_tree" model="ir.ui.view">
      <field name="name">view.sitecnet.software.tree</field>
      <field name="model">sitecnet.software</field>
      <field name="arch" type="xml">
        <tree string="software Tree">
          <field name="name"/>
            <field name="name"/>
            <field name="licencia"/>
            <field name="empresa"/>
        </tree>
      </field>
    </record>    
    

  </data>
</odoo>