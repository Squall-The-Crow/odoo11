<?xml version="1.0"?>
<openerp>
    <data>
        
        <record id="view_res_partner_form_inherit_sitecnet_module" model="ir.ui.view">
            <field name="name">res.partner.sitecnet</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="60"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="director"
                    domain="[('parent_id','=', name)]"
                    options="{'no_create_edit': True},
                           {'no_quick_create'}" 
                    attrs="{'invisible' :[('is_company', '=', False )]}"/>
                </field>
                <field name="director" position="after">
                    <field name="contacto" 
                    domain="[('parent_id','=', name)]"
                    options="{'no_create_edit': True},
                           {'no_quick_create'}" 
                    attrs="{'invisible' :[('is_company', '=', False )]}"/>
                </field>                
                <notebook position="inside">
                    <page string="Servicios">
                            <group>
                                <field name="servicios" 
                                domain="[('empresa','=', empresa)]"
                                attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            </group>
                    </page>
                    <page string="Rutinas">
                        <group>
                            <field name="rutinas" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            <field name="rutinas_usuario" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', True )]}"/>
                        </group>                    
                    </page>
                    <page string="Equipos">
                        <group>
                            <field name="equipos" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            <field name="equipos_usuario" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', True )]}"/>
                        </group>
                    </page>
                    <page string="Documentos">
                        <group>
                            <field name="documentos" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            <field name="documentos_usuario" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', True )]}"/>
                        </group>
                    </page>
                    <page string="Software">
                        <group>
                            <field name="software" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            <field name="software_usuario" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', True )]}"/>
                        </group>
                    </page>
                    <page string="Accesos">
                        <group>
                            <field name="accesos" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', False )]}"/>
                            <field name="accesos_usuario" 
                            domain="[('empresa','=', empresa)]"
                            attrs="{'invisible' :[('is_company', '=', True )]}"/>
                        </group>
                    </page>
                </notebook>
            </field>
       </record>
       
   </data>
</openerp>