<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>

    <record id="rutinas_menu_action" model="ir.actions.act_window">
      <field name="name">Sitecnet Rutinas</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sitecnet.rutinas</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Rutinas
        </p>
        <p>
          Presiona Crear para agregar una nueva Rutina
        </p>
      </field>
    </record>

      <record id="view_sitecnet_rutinas_form" model="ir.ui.view">
      <field name="name">view.sitecnet.rutinas.form</field>
      <field name="model">sitecnet.rutinas</field>
      <field name="arch" type="xml">
        <form string="Rutinas Form">
        <h1>
            <field name="name" default_focus="1" placeholder="Ej. RevisiÃ³n de Respaldos"/>
        </h1>
        <group>
        <group>
          <field name="empresa"/>
            <field name="usuario"/>
            <field name="tecnico"/>
            </group>
            <group>
            <field name="fecha"/>
            <field name="servicio"/>
            <field name="calificacion"/>
            <field name="estado"/>
            </group>
          </group>
          <group>
          <field name="resultado"/>
          <field name="validacion"/>
          </group>
          <notebook>
                <page string="Usuarios">
                  <field name="usuarios"/>
                </page>
                <page string="Equipos">
                  <field name="equipo"/>
                </page>
            </notebook>
        </form>
      </field>
    </record>

    <record id="view_sitecnet_rutinas_tree" model="ir.ui.view">
      <field name="name">view.sitecnet.rutinas.tree</field>
      <field name="model">sitecnet.rutinas</field>
      <field name="arch" type="xml">
        <tree string="Rutinas Tree">
          <field name="name"/>
            <field name="name"/>
            <field name="empresa"/>
            <field name="fecha"/>
        </tree>
      </field>
    </record>

    <record id="calendar" model="ir.ui.view">
      <field name="name">view.sitecnet.rutinas.calendar</field>
      <field name="model">sitecnet.rutinas</field>
      <field name="priority" eval="2"/>
      <field name="arch" type="xml">
        <calendar string="Servicio Calendar" date_start="fecha" color="tecnico" event_open_popup="true">
          <field name="name"/>
          <field name="empresa"/>
        </calendar>
      </field>
    </record>

  </data>
</odoo>