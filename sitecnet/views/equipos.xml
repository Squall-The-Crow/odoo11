<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>

    <record id="equipos_menu_action" model="ir.actions.act_window">
      <field name="name">Sitecnet Equipos</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sitecnet.equipos</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Equipos
        </p>
        <p>
          Presiona Crear para agregar un nuevo Equipo
        </p>
      </field>
    </record>     

      <record id="view_sitecnet_equipos_form" model="ir.ui.view">
      <field name="name">view.sitecnet.equipos.form</field>
      <field name="model">sitecnet.equipos</field>
      <field name="arch" type="xml">
        <form string="Equipos Form">
            <header>
            <button name="button_activo" string="Activo" class="oe_highlight" type="object"/>
            <button name="button_fo" string="Fuera de Operacion" type="object"/>
            <button name="button_mto" string="En mantenimiento" type="object"/>
            <button name="button_baja" string="Fuera de Servicio" type="object"/>
            <field name="status" widget="statusbar" statusbar_visible="activo,fo,mto,baja"/>
          </header>
            <sheet>
              <h1>
                <field name="serie" default_focus="1" placeholder="Serie"/>
              </h1>
              <group string="Datos del Equipo">
              <group>
                <field name="descripcion"/>                
                <field name="marca"/>
                <field name="modelo"/>
                <field name="tipo"/>
                <field name="subtipo"/>
                <field name="tecnologia"/>
                <field name="capacidad"/>
                <field name="renta"/>
                <field name="poliza"/>
              </group>
              <group>
                  <field name="empresa"/>
                  <field name="usuario"/>
                  <field name="equipo"/>
                  <field name="fecha_compra"/>
                  <field name="fin_garantia"/>
                  <field name="fecha_fin"/>
                  <field name="dominio"/>
                  <field name="nombre_dominio"/>                                 
              </group>
              </group>
               <group string="informacion complementaria">
              <group>
                <field name="procesador_linea"/>
                <field name="procesador_modelo"/>
                <field name="dd_tipo"/>
                <field name="dd_capacidad"/>
                <field name="memoria_capacidad"/>
                <field name="memoria_tipo"/>
              </group>
              <group>
                <field name="configuracion"/>
                <field name="drivers"/> 
                <field name="ip"/>                  
                <field name="localizacion"/>
                <field name="factura_cliente"/>
                <field name="factura_interna"/>
              </group>
              </group>
              <notebook>
                <page string="Componentes">
                  <field name="componentes">
                    <tree string="Componentes" editable="bottom">
                      <field name="descripcion"/>
                      <field name="marca"/>
                      <field name="modelo"/>
                      <field name="tecnologia"/>
                      <field name="capacidad"/>
                      <field name="serie"/>
                    </tree>
                  </field>
                </page>
                <page string="Observaciones">
                <field name="observaciones"/> 
                </page>
                <page string="Licencias">
                  <field name="licencias">
                    <tree string="Licencias" editable="bottom">
                      <field name="name"/>
                      <field name="licencia"/>
                      <field name="user"/>
                      <field name="passw"/>
                    </tree>
                  </field>
                </page>
                <page string="Cuentas">
                  <field name="cuentas">
                    <tree string="Cuentas" editable="bottom">
                      <field name="name"/>
                      <field name="passw"/>
                      <field name="tipo"/>
                      </tree>
                  </field>
                </page>
                <page string="Tickets">
                  <field name="helpdesk" editable="bottom">
                    <tree>
                      <field name="create_date"/>
                      <field name="ticket_number"/>
                      <field name="parent_company_id"/>
                      <field name="person_name"/>
                      <field name="state"/>
                    </tree>
                  </field>
                </page>
              </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_sitecnet_equipos_tree" model="ir.ui.view">
      <field name="name">view.sitecnet.equipos.tree</field>
      <field name="model">sitecnet.equipos</field>
      <field name="arch" type="xml">
        <tree string="Equipos Tree">
          <field name="descripcion"/>
            <field name="modelo"/>
            <field name="empresa"/>
            <field name="usuario"/>
            <field name="status"/>
        </tree>
      </field>
    </record>  

  </data>
</odoo>